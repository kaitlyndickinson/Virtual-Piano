                                            To="{StaticResource blackKeyColor}" Duration="{StaticResource highlightDuration}"/>
									</Storyboard>
								</VisualState>

								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ColorAnimation
                                            Storyboard.TargetName="RootGrid2"
                                            Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
